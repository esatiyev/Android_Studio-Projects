<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TextView block -->
    <TextView
        android:id="@+id/tarafText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tarafını seç:"
        android:textSize="24sp"
        android:textColor="#CCCCCC"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:paddingTop="8dp"/>

    <!-- RadioGroup for inline radio buttons -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp">

        <!-- First radio button -->
        <RadioButton
            android:id="@+id/kocovalilar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Koçovalılar"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            android:layout_weight="1"
            android:onClick="clickKocovalilar" />

        <!-- Second radio button -->
        <RadioButton
            android:id="@+id/karakuzular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karakuzular"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            android:layout_weight="1"
            android:onClick="clickKarakuzular" />
    </RadioGroup>

    <ImageView
        android:id="@+id/cukurumaHosgeldiniz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hosgeldiniz" />
</LinearLayout>
